apiVersion: v1
kind: Pod
metadata:
  creationTimestamp: null
  name: kubeapi-keepalived
  namespace: kube-system
  labels:
    component: kube-apiserver-lb
    tier: control-plane
spec:
  containers:
  - image: <%= @keepalived_image %>
    name: keepalived
    resources: {}
    securityContext:
      capabilities:
        add:
        - NET_ADMIN
        - NET_BROADCAST
        - NET_RAW
    volumeMounts:
    - mountPath: /etc/keepalived/keepalived.conf
      name: config
      readOnly: true
    - mountPath: /etc/keepalived/check_apiserver.sh
      name: checker
      readOnly: true
  hostNetwork: true
  volumes:
  - hostPath:
      path: /etc/kubernetes/keepalived.conf
    name: config
  - hostPath:
      path: /etc/kubernetes/check_apiserver.sh
    name: checker
status: {}
